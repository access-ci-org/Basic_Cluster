[Unit]
Description={{ item.desc }}
After=rabbitmq-server.service
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=centos
WorkingDirectory={{ rabbitmq_agents_loc }}
ExecStart={{ rabbitmq_agents_loc }}/venv/bin/python {{ item.name }}_create.py
Environment="PATH={{ rabbitmq_agents_loc }}/venv/bin:$PATH"

[Install]
WantedBy=multi-user.target
